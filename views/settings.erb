       <div class="col">
        <div style="padding-bottom: 10px" class="row">
          <h2>Control Panel</h2>
        </div>
        <div class="row">
        <div>
          <button style="margin:20px" class="btn btn-primary" id="csv">Export to CSV</button>
         <form style="display:inline" action="/output" method="post">
          <button style="margin:20px" class="btn btn-primary" type="submit">Reset Counter</button>
