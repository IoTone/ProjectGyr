              <label for="duty"><h4>Reader Duty Cycle: <%= @reader_duty_cycle %></h4></label>
              <input name="duty" type="number" class="form-control" id="readerDutyCyle">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
         </div>

         <div style="padding: 30px" class="row">
           <form action="/linger" method="post">
             <div class="form-group">
               <label for="linger_threshold"><h4>Linger Threshold: <%= @linger_threshold %></h4></label>
